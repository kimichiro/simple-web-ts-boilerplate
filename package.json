{
  "name": "tryreact",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:all": "yarn clean && yarn build:server && yarn build:client",
    "build:all:dev": "yarn clean && yarn build:server:dev && yarn build:client:dev",
    "build:all:prod": "yarn clean && yarn build:server:prod && yarn build:client:prod",
    "build": "webpack",
    "build:client": "yarn build --build-bundles=client --mode=development",
    "build:client:dev": "yarn build:client --mode=development",
    "build:client:prod": "yarn build:client --mode=production",
    "build:server": "yarn build --build-bundles=server --mode=development",
    "build:server:dev": "yarn build:server --mode=development",
    "build:server:prod": "yarn build:server --mode=production",
    "clean": "rimraf ./build",
    "dev": "yarn dev:client",
    "dev:client": "yarn build:client:dev --watch",
    "start": "node ./build/server/server.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/node": "^13.1.6",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@types/express": "^4.17.2",
    "@types/minimist": "^1.2.0",
    "express": "^4.17.1",
    "minimist": "^1.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0"
  }
}
